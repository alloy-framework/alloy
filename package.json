{
  "name": "alloy",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alloy-framework/alloy.git"
  },
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=Infinity build",
    "watch": "tsc --build ./tsconfig.ws.json --watch",
    "change": "chronus",
    "clean": "pnpm -r run clean && rimraf **/.temp/",
    "test": "vitest run",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix ."
  },
  "devDependencies": {
    "@actions/github": "^6.0.1",
    "@alloy-js/cli": "workspace:~",
    "@eslint/js": "catalog:",
    "@chronus/chronus": "^1.1.0",
    "@chronus/github": "^1.0.3",
    "@chronus/github-pr-commenter": "^1.0.3",
    "@vitest/eslint-plugin": "catalog:",
    "concurrently": "catalog:",
    "eslint": "catalog:",
    "execa": "^9.6.0",
    "pathe": "^2.0.3",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "rimraf": "catalog:",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.8",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "patchedDependencies": {
      "@microsoft/tsdoc@0.15.1": "patches/@microsoft__tsdoc@0.15.1.patch"
    },
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5",
      "astro>vite": "^7.3.1"
    }
  }
}
