{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "verbatimModuleSyntax": true,
    "tsBuildInfoFile": "./temp/.tsbuildinfo",
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "testing/**/*.ts",
    "testing/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
