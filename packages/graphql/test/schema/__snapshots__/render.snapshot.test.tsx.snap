  id: ID!
  author: User
  tags: [String!]
}

union SearchResult = User | Post

input ProfileInput {
  displayName: String = "Anonymous"
  url: Url
  legacy: String @deprecated
}

input SearchFilter @oneOf {
  id: ID
  name: String
}

type Query {
  me: User
  search(filter: SearchFilter, limit: Int = 10, includeArchived: Boolean @deprecated): [SearchResult]
}

type Mutation {
  updateProfile(input: ProfileInput!): Profile
}

type Subscription {
  userAdded: User
}"
