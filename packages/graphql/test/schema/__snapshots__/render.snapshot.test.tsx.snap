  """The ID of an object"""
  id: ID!
}

enum Role {
  ADMIN
  USER @deprecated
}

type Profile {
  url: Url
  bio: String @deprecated
}

type User implements Node {
  """The ID of an object"""
  id: ID!
  name: String
  role: Role @deprecated
  profile: Profile
}

